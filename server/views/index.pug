doctype
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title The Alcojery
    link(href='https://getbootstrap.com/docs/4.1/dist/css/bootstrap.min.css' rel='stylesheet')
  body
    main#shopVue.container(role='main')
      h5#pageTitle.display-5 The Alcojery Product List
      table.table.table-hover#productTable
        thead.thead-dark
          tr
            th Product ID
            th(scope='col') Product Name
            th(scope='col') Price
            th(scope='col') Items Left
            th(scope='col') Actions
        tbody
          tr(v-for="product in products")
            td {{ product.id }}
            td {{ product.productName }}
            td {{ product.price }}
            td {{ product.itemsLeft }}
            td
              button.btn.btn-success Update
              span(style='margin-right: 20px;')
              button(v-on:click="deleteProduct(product)").btn.btn-danger(value="Reload Page" onClick="document.location.reload(true)") Delete
      form#addProduct(action='/' method='post')
        .form-group
          label(for='productName') Product Name:
          input.form-control(type='text' name='productName' v-model="productName")
        .form-group
          label(for='Price') Price:
          input.form-control(type='number' name='price' v-model="price")
        .form-group
          label(for='itemLeft') Quantity
          input.form-control(type='number' name='itemsLeft' v-model="itemsLeft")
        button.btn.btn-primary(type='submit') Submit
        button.btn.btn-defaults#clearBtn(type="button" v-on:click="clear") Clear

    script(src="/axios.min.js")
    script(src="/vue.js")
    script(src="/sample.js")
